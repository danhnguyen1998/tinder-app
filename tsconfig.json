{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react",
    "lib": ["ES2015", "ES2016", "DOM", "ES2017", "ES6", "ES5"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["./src/*"]
    },
    "allowJs": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
